<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:text="지도 보기"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_goToAlbum"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="60dp" />

    <Button
        android:id="@+id/btn_goToAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="80dp"
        android:text="사진첩"
        app:layout_constraintStart_toEndOf="@+id/btn_map"
        app:layout_constraintTop_toBottomOf="@+id/spinner2"
        android:layout_marginLeft="46dp" />

    <Button
        android:id="@+id/btn_uploadCameraImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="13dp"
        android:text="카메라 찍기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="13dp" />

    <Button
        android:id="@+id/btn_uploadImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="13dp"
        android:text="사진 올리기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_uploadCameraImages"
        android:layout_marginRight="13dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginBottom="30dp"
        android:text="사진을 업로드할 고양이를 골라주세요"
        app:layout_constraintBottom_toBottomOf="@+id/btn_uploadCameraImages"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="42dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/editText_name"
        app:layout_constraintTop_toBottomOf="@+id/textView"></Spinner>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="41dp"
        android:text="고양이 이름과 타입 작성"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        android:layout_marginLeft="52dp" />

    <EditText
        android:id="@+id/editText_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="등록할 고양이 이름"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editText_features"
        app:layout_constraintStart_toStartOf="@+id/editText_features"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/editText_features"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="18dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="등록할 고양이 특징"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/btn_goToAlbum"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/editText_name" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toEndOf="@+id/editText_features"
        app:layout_constraintStart_toStartOf="@+id/editText_features"
        app:layout_constraintTop_toBottomOf="@+id/btn_uploadNewCat"></Spinner>

    <Button
        android:id="@+id/btn_uploadNewCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정보 올리기"
        app:layout_constraintBaseline_toBaselineOf="@+id/editText_features"
        app:layout_constraintStart_toEndOf="@+id/spinner2" />


</androidx.constraintlayout.widget.ConstraintLayout>